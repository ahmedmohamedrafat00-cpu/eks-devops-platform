global:
  env: prod

backend:
  replicaCount: 2

  image:
    repository: 985539792593.dkr.ecr.us-east-1.amazonaws.com/app-backend
    tag: "REPLACED_BY_JENKINS"
    pullPolicy: IfNotPresent

  containerPort: 8080

  resources:
    requests:
      cpu: "500m"
      memory: "1Gi"
    limits:
      cpu: "1"
      memory: "2Gi"

frontend:
  replicaCount: 2

  image:
    repository: nginx
    tag: stable
    pullPolicy: IfNotPresent

  containerPort: 80

ingress:
  enabled: true
  className: alb

